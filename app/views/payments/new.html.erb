<div class="container">
  <div class="row" >
    <div class="col-md-8" >
    <%= form_tag order_payments_path(@order) do %>
      <h2 class ="offset-5" style="color:#82AE46">Check-Out</h2>
      <div class="container">
        <table id="cart" class="table table-hover">
          <thead>
            <tr>
              <th style="width:40%"><h5><strong>Produits</strong></h5></th>
              <th style="width:11%"><h5><strong>Prix</strong></h5></th>
            </tr>
          </thead>
          <tbody>
          <% current_user.cart.cart_items.each do |item| %>
            <tr>
              <td data-th="Product">
                <div class="row">
                  <div class="col-sm-3 hidden-xs"><%= cl_image_tag item.package.photo, height: 70 %></div>
                  <div class="col-sm-8 ml-3">
                    <h5 class=""><%= item.package.name%></h5>
                    <p><%= item.package.description%></p>
                  </div>
                </div>
              </td>
              <td data-th="Price">
                <div class="mt-5">
                <%= item.package.price %> € x <%=item.quantity %>
                </div>
              </td>
            </tr>
          <% end %>
          </tbody>
          <tfoot>
            <tr><td ></td>
              <td class="hidden-xs"><strong>TOTAL: <%= humanized_money_with_symbol(@order.amount) %></strong></td></tr>
            <tr>
              <td><%= link_to "Continuer des achats", packages_path, class: "btn-flat-home" %></td>
              <td> <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                 data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                 data-label="Payer par carte"
                 data-name="My Purchase"
                 data-email="<%= current_user.email %>"
                 data-description="Basket <%= current_user.cart.id %>"
                 data-amount="<%= @order.amount_cents %>"
                 data-currency="<%= @order.amount.currency %>">
               </script></td>
            </tr>
          </tfoot>
        </table>
      </div>
    <% end %>
    </div>
    <div class="col-md-4" id="cart-table-st">
      <div class="card-category content mt-5 pt-5 pb-5" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%=  cl_image_path'fruit_basket_dfayvi.webp' %>'); height: 400px">
        <p><strong class ="content">Vous serez livré à moins de 500m de : <%= @user.address if !@user.address.nil? %>
        <br><br>le <%= @order.day.strftime("%-d %B %Y") %><br>entre <%= @order.time_start.strftime("%H:%M") %> et <%= @order.time_end.strftime("%H:%M") %></strong>.</p>
      </div>
    </div>
<div class="container">
  <div class = "ml-2 mt-4"
  id="map"
  data-markers="<%= @marker_address.to_json %>";
  data-restaurants="<%= @markers.to_json %>";
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  data-center="<%= @center  %>">
  </div>
  </div>
</div>

